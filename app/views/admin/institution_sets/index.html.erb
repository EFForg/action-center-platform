<%= render 'admin/header' -%>
<div class='container-fluid'>
  <div class="tabs-left">
    <%= render 'admin/nav_tabs' -%>
    <!-- Tab panes -->
    <div class="tab-content responsive">
      <div class="tab-pane active" id="institutions">
        <h2>Institution Sets</h2>
        <p>Use institution sets to allow supporters to sign on behalf of their school, business, or other organization. </p>

        <table class="table table-simple">
          <thead>
            <tr>
              <th>Institution Set</th>
              <th></th>
            </tr>
          </thead>

          <tbody>
            <% @institution_sets.each do |institution_set| %>
              <tr>
                <tr>
                  <td>
                    <%= link_to institution_set.name , [:admin, institution_set] -%>
                  </td>
                  <td>
                    <div class='btn-group'>
                      <%= link_to 'View and edit â†’', [:admin, institution_set], class: 'btn btn-sm btn-success'%>
                      <%= link_to 'Delete', [:admin, institution_set], class: 'btn-sm btn btn-danger', method: :delete, data: { confirm: 'Are you sure?' } %>
                    </div>
                  </td>
                </tr>
              </tr>
            <% end %>
            <tr>
              <td>
                <%= link_to new_admin_institution_set_path, class: 'btn btn-sm btn-primary' do %>
                  <i class="icon-doc-new"></i> Add a new institution set
                <% end %>
              </td>
              <td colspan="4"></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>